<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--cardview-->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">1dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">?attr/colorControlNormal</item>
        <item name="chipIconSize">16dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="chipBackgroundColor">@color/colorChip</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="chipStrokeColor">@color/colorChip</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>


    <style name="ButtonStlye123" >
        <item name="android:textSize">19dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>


    // 따미샵-탭레이아웃-폰트
    <style name="shop_tab_font_selected"
        parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanum_square_extrabold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shop_tab_font_unselected"
        parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanum_square_bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    // 따미샵-chip
    <style name="shop_chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="chipBackgroundColor">#FFFFFF</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">#322FA0</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

</resources>
