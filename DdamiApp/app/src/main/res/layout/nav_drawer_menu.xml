<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="@drawable/nav_shape"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingLeft="52dp">

        <TextView
            android:id="@+id/nav_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="따미마을"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#322FA0"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_myroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 작업실"
            android:layout_marginBottom="12dp"
            android:textSize="15dp"
            android:textColor="#232323"
            android:clickable="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/nav_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요한 작품"
            android:layout_marginBottom="30dp"
            android:textSize="15dp"
            android:textColor="#232323"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="따미샵"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#322FA0"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판구매 조회"
            android:layout_marginBottom="12dp"
            android:textSize="15dp"
            android:textColor="#232323"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_shop_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찜한 목록"
            android:layout_marginBottom="30dp"
            android:textSize="15dp"
            android:textColor="#232323"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대외활동"
            android:layout_marginBottom="16dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#322FA0"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_interested_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심있는 활동"
            android:layout_marginBottom="30dp"
            android:textSize="15dp"
            android:textColor="#232323"
            android:clickable="true"/>
        <TextView
            android:id="@+id/nav_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#322FA0"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>