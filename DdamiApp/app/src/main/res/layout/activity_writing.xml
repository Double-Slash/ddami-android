<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/writingView"
    android:orientation="vertical">
<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:id="@+id/filter_fragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:name="com.doubleslash.ddamiapp.fragment.FilterFragment"-->
<!--        />-->

    <include
        android:id="@+id/tool_bar"
        layout="@layout/writing_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">


        <LinearLayout
            android:id="@+id/writingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".WritingActivity">

            <EditText
                android:id="@+id/writingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="제목을 입력해주세요" />

            <EditText
                android:id="@+id/writingContent"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:bufferType="spannable"
                android:gravity="top"
                android:hint="내용을 입력해주세요" />

            <LinearLayout
                android:id="@+id/writingImgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="17dp"
                android:text="카테고리"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold" />


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rg_btn1"
                        android:layout_width="67dp"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="커스텀목록1" />

                    <RadioButton
                        android:id="@+id/rg_btn2"
                        android:layout_width="67dp"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="커스텀목록2" />
                    <RadioButton
                        android:id="@+id/rg_btn3"
                        android:layout_width="67dp"
                        android:layout_height="14dp"
                        android:layout_weight="1"
                        android:text="커스텀목록2" />
                </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                android:layout_width="27dp"
                android:layout_height="17dp"
                android:text="분야"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="16dp"
                />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_input_add"
                    android:layout_marginLeft="270dp"
                    android:id="@+id/add_filter"
                    android:onClick="FilterAdd"
                    />
                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/button3">

                    <fragment
                    android:id="@+id/mainFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.doubleslash.ddamiapp.fragment.FilterFragment"/>

                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filter_add"
                android:orientation="horizontal"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1EFFE"
                android:layout_marginTop="99dp"
                android:windowSoftInputMode="adjustResize"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="18.85dp"
                    android:layout_height="16.97dp"
                    android:layout_marginRight="25.4dp"
                    android:background="@drawable/ic_photo_camera"
                    />

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="10.41dp"
                    android:layout_height="20.83dp"
                    android:background="@drawable/ic_attach_file" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>