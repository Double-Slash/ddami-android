<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/setting_layout"

    android:layout_height="match_parent"
    android:id="@+id/writingView"

    android:orientation="vertical">
<!--    <androidx.fragment.app.FragmentContainerView-->
<!--        android:id="@+id/filter_fragment"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:name="com.doubleslash.ddamiapp.fragment.FilterFragment"-->
<!--        />-->

    <include
        android:id="@+id/tool_bar"
        layout="@layout/writing_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/writingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".WritingActivity">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/filter_imageBtn"
                android:background="#F0F0F6" />

            <EditText
                android:id="@+id/writingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="제목을 입력해주세요" />

            <EditText
                android:id="@+id/writingContent"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:bufferType="spannable"
                android:gravity="top"
                android:hint="내용을 입력해주세요" />
            <LinearLayout
                android:id="@+id/writingImgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="17dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="15dp"
                android:text="카테고리"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rg_btn1"
                    android:layout_width="67dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="커스텀목록1" />

                <RadioButton
                    android:id="@+id/rg_btn2"
                    android:layout_width="67dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="커스텀목록2" />

                <RadioButton
                    android:id="@+id/rg_btn3"
                    android:layout_width="67dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="커스텀목록2" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="16dp"
                    android:text="분야"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add_filter"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="340dp"
                    android:background="@drawable/ic_btn_add"
                    android:onClick="FilterAdd" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filter_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="99dp"
                android:background="#F1EFFE"
                android:orientation="horizontal"
                android:windowSoftInputMode="adjustResize">

                <Button
                    android:id="@+id/btnCamera"
                    android:layout_width="20dp"
                    android:layout_height="16.97dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_photo_camera" />

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_attach_file" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>