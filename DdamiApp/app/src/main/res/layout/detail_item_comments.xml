<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comment_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/img_shop_detailview_writer"
        android:layout_margin="20dp"
        />
    <RelativeLayout
        android:id="@+id/comment_itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentStart="true"
            android:background="#00ffffff"
            android:src="@drawable/img_certification_logo"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/comment_nic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/artist"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanum_square_bold"
            android:textSize="14dp"
            android:textColor="#3C3C3C"
            android:text="닉네임"/>

        <LinearLayout
            android:id="@+id/comment_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/comment_nic"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/comment_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="0000"
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="."
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/comment_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="00"
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="."
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/comment_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_regular"
                android:text="00"
                android:textColor="#BBBBBB"
                android:textSize="12dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/comment_contexts"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_nic"
            android:fontFamily="@font/nanum_square_regular"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.3"
            android:textSize="14dp"
            android:textColor="#4D4D4D"
            android:text="댓글 내용"
            />

        <TextView
            android:id="@+id/recomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/nanum_square_regular"
            android:text="답글"
            android:textColor="#808080"
            android:textSize="12dp"
            />

    </RelativeLayout>


</LinearLayout>