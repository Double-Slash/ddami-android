<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.shop.ShopWorkDetailActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleX="1.5"
        app:srcCompat="@drawable/img_shop_detailview_work" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:background="@drawable/shape_shop_detail_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="29dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="27dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detail_work_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_light"
                    android:text="TextView"
                    android:textColor="#4D4D4D"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/btn_shop_detailview_heart" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/btn_shop_detailview_menu" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_work_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_bold"
                android:text="작가가 지정한 제목"
                android:textColor="#232323"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/img_shop_detailview_writer" />

                <TextView
                    android:id="@+id/tv_work_detail_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="작성자 이름"
                    android:textColor="#4D4D4D"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shop_detail_work_radius_blue"
                    android:fontFamily="@font/nanum_square_regular"
                    android:paddingStart="25dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="25dp"
                    android:paddingBottom="10dp"
                    android:text="거래하기"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:background="#DBDBDB" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="가격"
                        android:textColor="#232323"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_work_detail_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="15,000원"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="거래장소"
                        android:textColor="#232323"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_work_detail_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="15,000원"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="설명"
                        android:textColor="#232323"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_work_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:lineSpacingExtra="5dp"
                        android:text="작품(어떤 작품이다) 혹은 재료(몇 번 썼다) 설명 작품(어떤 작품이다) 혹은 재료(몇 번 썼다) 설명 작품(어떤 작품이다) 혹은 재료(몇 번 썼다) 설명 작품(어떤 작품이다) 혹은 재료(몇 번 썼다) 설명"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>
</FrameLayout>