<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_whole_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".fragment.FilterFragmentKotlin">

    <RelativeLayout
        android:id="@+id/filter_top_iconLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter_layout"
        android:backgroundTintMode="@android:color/transparent">

        <ImageButton
            android:id="@+id/filter_imageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#00ff0000"
            android:padding="20dp"
            android:src="@drawable/img_filter_bar" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/filter_imageBtn"
            android:background="#BCBCBC" />

        <ScrollView
            android:id="@+id/filter_layout_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/divider"
            android:background="#ffffff">

            <RelativeLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="600dp">

                <RelativeLayout
                    android:id="@+id/layout_space_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_space_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="공간 디자인"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allSpace"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_space_design"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_livingSpace"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_space_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_allSpace"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="생활공간"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_build"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_space_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_livingSpace"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="건축"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_interior"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allSpace"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="인테리어"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_inner"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_livingSpace"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/btn_interior"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="실내"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_envir"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allSpace"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/btn_inner"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="환경"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_modern_art"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_space_design"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_modern_art"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="현대미술"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allMA"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_modern_art"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_painting"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_modern_art"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_allMA"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="회화"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_sculp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_modern_art"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_painting"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="조형"
                        android:textColor="#808080"
                        android:textSize="16dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_craft_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_modern_art"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_craft_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="공예 디자인"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allCraft"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_craft_design"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pottery"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_craft_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_allCraft"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="도자"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_metals"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_craft_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_pottery"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="금속"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_fiber"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allCraft"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="섬유"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_woodworking"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_pottery"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/btn_fiber"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="목공"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_graphic_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_craft_design"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_graphic_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="그래픽 디자인"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pic"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_graphic_design"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="사진"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_illust"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_graphic_design"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/btn_pic"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="일러스트"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_graphic_design"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="영상"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allVideo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_video"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_animation"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_video"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_allVideo"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="애니메이션"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_movie"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_video"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_animation"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="영화"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_motion"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allVideo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="모션그래픽"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_docu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allVideo"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/btn_motion"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="다큐멘터리"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_industrial_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_video"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_industrial_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="산업 디자인"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allIndus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_industrial_design"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_goods"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_industrial_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_allIndus"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="제품"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_IndusSpace"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_industrial_design"
                        android:layout_margin="10dp"
                        android:layout_toRightOf="@+id/btn_goods"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="공간"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_UXUI"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allIndus"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="UX/UI"
                        android:textColor="#808080"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_car"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_allIndus"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/btn_UXUI"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="자동차"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_clothes_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_industrial_design"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/text_clothes_design"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanum_square_bold"
                        android:text="의상 디자인"
                        android:textColor="#232323"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_allClothes"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_clothes_design"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="100dp"
                        android:background="@drawable/shape_filter_btn"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="전체"
                        android:textColor="#808080"
                        android:textSize="16dp" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_shape_filter_left"
        android:fontFamily="@font/nanum_square_bold"
        android:text="모두 초기화"
        android:textColor="#322FA0"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/apply_btn"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/btn_shape_filter_right"
        android:fontFamily="@font/nanum_square_bold"
        android:text="적용하기"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>