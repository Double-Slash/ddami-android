<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/profile_top">
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#232323"/>

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="13dp"
                    android:layout_toRightOf="@+id/name"
                    android:text="TextView"
                    android:textColor="#BBB"/>

                <TextView
                    android:id="@+id/program"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textSize="13dp"
                    android:textColor="#808080"/>

                <TextView
                    android:id="@+id/field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/program"
                    android:layout_marginTop="13dp"
                    android:text="TextView"
                    android:textSize="12dp"
                    android:textColor="#3C3C3C" />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modify"
                android:padding="6dp"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:backgroundTint="#322FA0"
                android:text="+ Modify"
                android:textSize="11dp"
                android:layout_toRightOf="@+id/id"
                android:layout_marginTop="12dp"
                android:background="@drawable/verify_btn"
                android:textColor="#FFF"
                android:visibility="visible"/>
        </LinearLayout>
        <View
            style="@style/Divider"
            android:id="@+id/divider"
            android:layout_below="@+id/profile_top"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/divider">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/follower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="팔로워"
                android:textSize="13dp"
                android:textColor="#3C3C3C"/>

            <TextView
                android:id="@+id/followerNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/follower"
                android:text="-1"
                android:textSize="13dp"
                android:textColor="#3C3C3C"/>

            <TextView
                android:id="@+id/following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/followerNum"
                android:text="  ·  팔로우"
                android:textSize="13dp"
                android:textColor="#3C3C3C"/>

            <TextView
                android:id="@+id/followingNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/following"
                android:text="-1"
                android:textSize="13dp"
                android:textColor="#3C3C3C"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_follow"
                android:padding="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:backgroundTint="#322FA0"
                android:text="+ Follow"
                android:textSize="11dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/verify_btn"
                android:textColor="#FFF"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>