<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    style="@style/CustomCardViewStyle"
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/likelist_cardView"
        android:background="@drawable/shape_like_item"
        android:backgroundTint="#ffffff"
        app:cardElevation="0dp"
        android:layout_width="200dp"
        android:layout_height="230dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/ll_cardView_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ih_listImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/shape_like_item"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:id="@+id/text_lay"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/title_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#232323"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:text="작품 이름"/>
                <ImageView
                    android:id="@+id/likelist_profile"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/title_piece"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_brightness_1_white_24dp"
                    android:backgroundTint="#999999"/>
                <TextView
                    android:id="@+id/likelist_nic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/likelist_profile"
                    android:layout_below="@+id/title_piece"
                    android:textColor="#4D4D4D"
                    android:textSize="10dp"
                    android:layout_marginTop="13dp"
                    android:text="닉네임"/>
                <ImageButton
                    android:id="@+id/heart_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>