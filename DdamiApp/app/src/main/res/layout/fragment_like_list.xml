<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F0F0F6">

    <LinearLayout
        android:id="@+id/likePiece_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <ImageButton
            android:id="@+id/like_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_back"/>

        <TextView
            android:id="@+id/likePiece_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="좋아요한 작품"
            android:textColor="#232323"
            android:fontFamily="@font/nanum_square_bold"
            android:layout_marginStart="30dp"
            android:gravity="center_vertical"
            android:textSize="18dp"
            />


    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/filter_imageBtn"
        android:background="#F0F0F6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/setting_layout"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/like_recyclerview"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>



</LinearLayout>